<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.cms_android.activity.MainActivity">

    <!-- 顶部应用栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.CMSAndroid.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="人口普查管理系统"
            app:titleTextColor="@color/text_on_primary"
            app:navigationIcon="@drawable/ic_community"
            app:backgroundTint="@color/primary"
            app:menu="@menu/main_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 主要内容区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/surface"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 欢迎标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="欢迎使用"
                android:textSize="24sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全面管理户籍、居民、教育、医疗信息"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- 功能按钮网格 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="8dp">

                <!-- 户籍管理按钮 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_household_management"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/button_gradient_primary"
                            android:gravity="center"
                            android:clipToOutline="true"
                            android:layout_gravity="center"
                            android:shape="oval">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_household"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="户籍管理"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理户籍信息"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 居民管理按钮 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_resident_management"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/secondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/button_gradient_secondary"
                            android:gravity="center"
                            android:clipToOutline="true"
                            android:layout_gravity="center"
                            android:shape="oval">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_resident"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="居民管理"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理居民信息"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 教育管理按钮 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_education_management"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/tertiary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/gradient_background"
                            android:gravity="center"
                            android:clipToOutline="true"
                            android:layout_gravity="center"
                            android:shape="oval">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_education"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教育管理"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理教育记录"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 医疗管理按钮 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_medical_management"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/success">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/button_gradient_success"
                            android:gravity="center"
                            android:clipToOutline="true"
                            android:layout_gravity="center"
                            android:shape="oval">
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_medical"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="医疗管理"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理医疗记录"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- 退出登录按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="退出登录"
                android:textSize="16sp"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/text_on_primary"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.Material3.Button.ElevatedButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>