<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_household_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="户籍编号: H20240001"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_householder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="户主: 张三"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址: 北京市朝阳区xxx街道"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_population_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人口: 3人"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="编辑"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/surface_variant"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="删除"
                android:textSize="14sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/error_container"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>